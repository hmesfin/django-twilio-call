# Production Environment Variables for Django-Twilio-Call
# Copy this file to .env.production and fill in your actual values

# ============================================
# Environment Configuration
# ============================================
ENVIRONMENT=production
DEBUG=False

# ============================================
# Security Settings
# ============================================
SECRET_KEY=your-super-secret-key-here-min-50-chars-long
ENCRYPTION_KEY=your-encryption-key-here-32-bytes-base64-encoded

# Domain and allowed hosts
DOMAIN=yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ============================================
# Database Configuration
# ============================================
DB_NAME=callcenter_prod
DB_USER=callcenter_user
DB_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=5432

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# ============================================
# Twilio Configuration
# ============================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_BASE_URL=https://yourdomain.com
TWILIO_WEBHOOK_VALIDATE=True
TWILIO_REGION=us1
TWILIO_EDGE=sydney

# ============================================
# Django-Twilio-Call Configuration
# ============================================
DEFAULT_QUEUE=support
RECORDING_ENABLED=True
RECORDING_STORAGE=s3

# ============================================
# AWS Configuration
# ============================================
USE_AWS=True
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=callcenter-recordings-prod
AWS_S3_REGION_NAME=us-east-1
AWS_CLOUDFRONT_DOMAIN=d1234567890123.cloudfront.net

# ============================================
# Email Configuration
# ============================================
EMAIL_HOST=smtp.yourmailprovider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=server@yourdomain.com

# ============================================
# Monitoring Configuration
# ============================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ============================================
# Performance Configuration
# ============================================
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=30
CELERY_WORKER_CONCURRENCY=4

# ============================================
# Monitoring Services
# ============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:your-secure-flower-password

# ============================================
# Ports Configuration
# ============================================
WEB_PORT=8000
HTTP_PORT=80
HTTPS_PORT=443
REDIS_PORT=6379

# ============================================
# Data Storage
# ============================================
DATA_DIR=/var/lib/callcenter

# ============================================
# Build Information
# ============================================
BUILD_DATE=2024-01-01T00:00:00Z
VCS_REF=main
VERSION=1.0.0
GIT_SHA=your-git-commit-sha

# ============================================
# Backup Configuration
# ============================================
BACKUP_ENABLED=True
BACKUP_STORAGE=s3
DATA_RETENTION_DAYS=365

# ============================================
# Additional Security
# ============================================
JWT_BIND_TO_IP=True
JWT_REQUIRED_SCOPE=call_center